<!DOCTYPE html>
<html>
  <head>
    <title>GoshaDudar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-body border-bottom shadow-sm">


  <p class="h5 my-0 me-md-auto fw-normal">Puchkov</p>
  <nav class="my-2 my-md-0 me-md-3">
    <span class="p-2 text-dark"> <%= link_to 'Главная страница', index_path %> </span>
    <span class="p-2 text-dark"> <%= link_to 'Добавить пост', new_post_path %> </span>
    <span class="p-2 text-dark"> <%= link_to 'О нас', about_path %> </span>

  </nav>

   <% if user_signed_in? %> <!-- Если юзер залогинен -->
      <%= current_user.email %> | <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path %>
    <% end %>

</header>

     

  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
